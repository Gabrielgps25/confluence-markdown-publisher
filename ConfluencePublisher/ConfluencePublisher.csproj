<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <RootNamespace>ConfluencePublisher</RootNamespace>
	
	<PackAsTool>true</PackAsTool>
	<ToolCommandName>confluence-publisher</ToolCommandName>
	<PackageOutputPath>./nupkg</PackageOutputPath>
	<AssemblyName>ConfluencePublisher</AssemblyName>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\json.schema" />
  </ItemGroup>

  <ItemGroup>
    <Embedded-Resource Include="Resources\json.schema" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\json.schema" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MarkdownSharp" Version="2.0.5" />
    <PackageReference Include="Newtonsoft.Json.Schema" Version="3.0.13" />
    <PackageReference Include="Nito.AsyncEx.Context" Version="5.0.0" />
    <PackageReference Include="NuGet.Configuration" Version="5.6.0" />
  </ItemGroup>

</Project>
